<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDescription">

    <TextView
        android:id="@+id/jobdesc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Job Description"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/horizontalline"
        android:layout_marginHorizontal="45dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/jobdesc" />

    <ImageView
        android:id="@+id/companylogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jobrole"
        app:layout_constraintTop_toBottomOf="@id/horizontalline"
        android:textSize="22sp"
        android:hint="UX design intern"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/companylogo"/>

    <TextView
        android:id="@+id/companywebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="builder.ai"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/companylogo"
        app:layout_constraintStart_toStartOf="@+id/jobrole"
        app:layout_constraintTop_toBottomOf="@id/jobrole" />

    <TextView
        android:id="@+id/joblocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Pune, Maharashtra, India"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/companylogo"
        app:layout_constraintStart_toStartOf="@+id/companywebsite"
        app:layout_constraintTop_toBottomOf="@id/companywebsite" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTV"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/joblocation"
        android:textSize="22sp"
        android:text="Description"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/descriptionMLT"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Description of less than 5 lines___________________________________________________________________________________________________________________________________________________________________________________________________________________"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/descriptionTV"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV" />

    <View
        android:id="@+id/horizontalline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/descriptionMLT"
        tools:layout_editor_absoluteX="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abouttheroleTV"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/horizontalline2"
        android:textSize="22sp"
        android:text="About the Role"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/aboutroleMLT"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="About of less than 3 lines_________________________________________________________________________________________________________________________________________"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/abouttheroleTV"
        app:layout_constraintTop_toBottomOf="@id/abouttheroleTV" />

    <View
        android:id="@+id/horizontalline3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/aboutroleMLT"
        tools:layout_editor_absoluteX="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responsibilitiesTV"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/horizontalline3"
        android:textSize="22sp"
        android:text="Responsibilities"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/responsibilityMLT"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="About of less than 3 lines_________________________________________________________________________________________________________________________________________"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/responsibilitiesTV"
        app:layout_constraintTop_toBottomOf="@id/responsibilitiesTV" />










</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>